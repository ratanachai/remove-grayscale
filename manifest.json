{
  "manifest_version": 3,
  "name": "Remove Grayscale",
  "description": "Restores color to websites that use CSS grayscale filters.",
  "version": "1.0",
  "icons": {
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["scripting"]
}